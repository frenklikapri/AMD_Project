@page "/films"

<PageHeader Title="Manage Films">
    <RightContent>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#saveFilmModal">
            <i class="fas fa-plus" />
        </button>
    </RightContent>
</PageHeader>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                The Battle at Lake Changjin
            </td>
            <td>
                September 21, 2021
            </td>
        </tr>
        <tr>
            <td>
                No Time to Die
            </td>
            <td>
                28 September 2021
            </td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="saveFilmModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

